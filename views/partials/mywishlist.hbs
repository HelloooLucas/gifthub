
<h1>MY WISHLIST</h1>

{{#if wishlist}}
        <h3></h3>
        <p>{{wishlist.title}}</p>
    {{else}}
        <h3>No items in wishlist yet</h3>
    {{/if}}

<h2>Add an Item</h2>

<form action = "/process-wishlist-item" method = "POST">
    <label>
        Item:
        <input type = "text" name = "name"> 
    </label>
    <br />

    <label>
        Description:
        <input type = "text" name = "description"> 
    </label>
    <br />

    <label>
        Picture:
        <input type = "text" name = "pictureUrl"> 
    </label>
    <br />

    <label>
        Price:
        <input type = "number" name = "price"> 
    </label>
    <br />

<button>Add</button>
</form>

