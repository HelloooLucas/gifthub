
<h1>MY WISHLIST</h1>

<div id="wall-content">

    <div class="wishlist-main-container">
        <div class="wishlist-itself">
            {{#wall.wishlist}}
                {{> wishlistItemPartial}}
            {{/wall.wishlist}}
        </div>
        
        <div class="wishlist-form">
            
            <h2>Add an Item</h2>
            <form action = "/process-wishlist-item" method = "POST">
                <div class="wishlist-form-inside">

                    <div class="wishlist-labels">
                        <label for="wishlist-item-name">Item:</label>
                        <label for="wishlist-item-description">Description:</label>
                        <label for="wishlist-item-picture">Picture:</label>
                        <label for="wishlist-item-price">Price:</label>
                    </div>

                    <div class="wishlist-inputs">
                        <input id="wishlist-item-name" type="text" name="title">
                        <input id="wishlist-item-description" type="text" name="description">
                        <input id="wishlist-item-picture"type = "text" name = "pictureUrl">
                        <input id="wishlist-item-price" type="number" name="price">
                    </div>

                </div>

                <input type = "hidden" name = "roomId" value = {{roomId}}>
                <input type = "hidden" name = "userId" value = {{userId}}>
                <input type = "hidden" name = "wallId" value = {{wall._id}}>

                <button>Add</button>
            </form>
        </div>
    </div>


</div>
