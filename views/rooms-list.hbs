<!-- will show up on rooms-list.hbs (aka the groups I am part of)
should display an image, name, description
(similar to IronBeers cards or Netflix User page)
-->
<h1 class = "center">MY ROOMS</h1>

<!-- call a partial passing the info about each group -->

<ul>
    {{#each roomList}}
    <li>
        <div class = "wrapper container">
            <div class = "row">
                <div class = "col-4 margins-rooms-list">
                    {{> myRoomsPartial}}
                </div>
            </div>
        </div>
    </li>

    {{else}}

    <p>You do not currently have any rooms</p>

    {{/each}}
</ul>


<div id="abc">
    <div id="popupContact">

    <form class= "form-class" action = "/process-room" method = "POST">
    <img id="close" src="../public/images/xbutton.png" onclick ="div_hide()">
    <h2>New Room</h2>

     Name:
        <input type = "text" name = "name" size="35" placeholder = "e.g. Christmas 2018"> 
    </label>
    <br /><br />

    <label>
        Description:
        <input type = "text" name = "description" size="35" placeholder = "e.g. family gift-exchange"> 
    </label>
    <br /><br />

    <label>
        Cover photo:
        <input type = "text" name = "pictureUrl" size="35" placeholder = "e.g. http://example.com/room.png"> 
    </label>
    <br /><br />

<button>Save this Room</button>

</form>
    </div>
</div>
<!-- Display Popup Button -->
<button id="popup" onclick="div_show()">Create A New Room</button>


<script>
// Validating Empty Field
function check_empty() {
if (document.getElementById('name').value == "" || document.getElementById('email').value == "" || document.getElementById('msg').value == "") {
alert("Fill All Fields !");
} else {
document.getElementById('form').submit();
alert("Form Submitted Successfully...");
}
}
//Function To Display Popup
function div_show() {
document.getElementById('abc').style.display = "block";
}
//Function to Hide Popup
function div_hide(){
document.getElementById('abc').style.display = "none";
}
</script>